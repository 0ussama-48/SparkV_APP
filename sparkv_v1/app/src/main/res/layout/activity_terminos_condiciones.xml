<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CLIENTE.Actividades.Perfil.TerminosCondicionesActivity">

    <!-- Barra Superior -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            android:navigationIcon="@drawable/ic_arrow_back" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Términos y Condiciones"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:background="#F5F5F5"
                android:padding="8dp" />

            <!-- Última Actualización -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Última actualización: 1 de mayo de 2025"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <!-- Sección 1: Introducción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Introducción"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al utilizar nuestros servicios, aceptas estos términos y condiciones. SPARKV se reserva el derecho de modificarlos en cualquier momento."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Sección 2: Uso del Servicio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Uso del Servicio"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los usuarios deben cumplir con las normas de seguridad y respetar los horarios acordados para los servicios de limpieza."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Sección 3: Responsabilidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Responsabilidad"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPARKV no se hace responsable de daños causados por terceros o por uso incorrecto de los servicios."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Sección 4: Modificaciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Modificaciones"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los cambios en estos términos serán comunicados a través de la aplicación o por correo electrónico."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Botón de Aceptar -->
            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Aceptar"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/primary_color"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>