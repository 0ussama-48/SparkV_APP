<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.Activity.Soporte.ReportarProblemaActividad">

    <!-- Botón de Volver -->
    <ImageView
        android:id="@+id/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Volver"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tituloReportarProblema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar un Problema"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1e80c1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/botonVolver"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp" />

    <!-- Descripción del Problema -->
    <EditText
        android:id="@+id/campoDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:hint="Describe el problema..."
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tituloReportarProblema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/botonEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="Enviar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1e80c1"
        app:layout_constraintTop_toBottomOf="@id/campoDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>