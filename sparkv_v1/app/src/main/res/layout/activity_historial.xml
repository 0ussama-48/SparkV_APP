<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Pedidos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"
        android:elevation="4dp" />


    <TextView
        android:id="@+id/tvSinPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tienes pedidos en el historial."
        android:textSize="16sp"
        android:textColor="#9E9E9E"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>
<LinearLayout
android:id="@+id/bottomMenu"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="#FFFFFF"
android:elevation="4dp"
android:padding="8dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- Bot贸n Inicio -->
<LinearLayout
    android:id="@+id/homeBtn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:onClick="onHomeClick">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_btn1"
        app:tint="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textSize="12sp"
        android:textColor="#666666"
        android:textAlignment="center" />
</LinearLayout>

<!-- Bot贸n Perfil -->
<LinearLayout
    android:id="@+id/profileBtn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:onClick="onProfileClick">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_24"
        app:tint="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textSize="12sp"
        android:textColor="#666666"
        android:textAlignment="center" />
</LinearLayout>

<!-- Bot贸n Mis Tareas -->
<LinearLayout
    android:id="@+id/tasksBtn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:onClick="onTasksClick">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tasks"
        app:tint="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Tareas"
        android:textSize="12sp"
        android:textColor="#666666"
        android:textAlignment="center" />
</LinearLayout>

<!-- Bot贸n Ajustes -->
<LinearLayout
    android:id="@+id/settingsBtn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:onClick="onSettingsClick">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        app:tint="#2196F3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textSize="12sp"
        android:textColor="#666666"
        android:textAlignment="center" />
</LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
